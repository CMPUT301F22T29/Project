<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <ImageButton
        android:background="#ff040ab2"
        android:id="@+id/bluebutton"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:onClick="onButtonClicked"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/redbutton"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:background="#be2222"
        android:onClick="onButtonClicked"
        android:rotation="90"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt"
        android:textColor="#ffffff"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputUnitShoppingList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:ems="10"

            android:textSize="12sp"
            android:fontFamily="@font/comfortaaregular"

            android:hint="Unit" />

        <EditText
            android:id="@+id/inputAmountShoppingList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:textSize="12sp"
            android:fontFamily="@font/comfortaaregular"

            android:ems="10"

            android:hint="Amount" />

        <EditText
            android:id="@+id/inputCategoryShoppingList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:textSize="12sp"
            android:fontFamily="@font/comfortaaregular"

            android:ems="10"

            android:hint="Category" />

    </LinearLayout>
</RelativeLayout>