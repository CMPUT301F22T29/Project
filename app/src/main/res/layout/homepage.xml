<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentlayoutHomePage"
    android:background="#DBDBDB">

    <RelativeLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/Title"
            android:layout_width="218dp"
            android:layout_height="90dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"

            android:layout_marginTop="15dp"
            android:layout_marginBottom="9dp"

            android:fontFamily="@font/comfortaabold"
            android:text="FoodOrg"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="165dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="1dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/Title"
            android:fontFamily="@font/comfortaabold"
            android:minHeight="20dp"
            android:text="Username"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="410dp"
        android:layout_height="225dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ingredientButtonHome"
                android:layout_width="192dp"
                android:layout_height="180dp"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:contentDescription="Ingredient Storage"
                android:padding="20dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/storage"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/recipeButtonHome"
                android:layout_width="210dp"
                android:layout_height="180dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:contentDescription="Recipe"
                android:padding="20dp"
                android:scaleType="fitXY"
                tools:ignore="SpeakableTextPresentCheck"
                android:src="@drawable/recipe" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/comfortaabold"
                android:gravity="center"
                android:text="Ingredient Storage"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Recipe"
                android:textColor="@color/black"
                android:fontFamily="@font/comfortaabold"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="410dp"
        android:layout_height="225dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayoutHomepageBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/mealPlanButtonHome"
                android:layout_width="197dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:contentDescription="Meal Plan"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/mealplan"
                tools:ignore="HardcodedText,SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/shoppingListButtonHome"
                android:layout_width="211dp"
                android:layout_height="179dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:contentDescription="Shopping List"
                android:scaleType="fitXY"
                tools:ignore="SpeakableTextPresentCheck"
                android:src="@drawable/shoppinglist" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/comfortaabold"
                android:gravity="center"

                android:text="Meal Plan"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:fontFamily="@font/comfortaabold"

                android:gravity="center"
                android:text="Shopping List" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutHomepageBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/parentlayoutHomePage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <Button

            android:id="@+id/LogOutButton"
            android:layout_width="220dp"
            android:layout_height="wrap_content"


            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="1dp"
            android:backgroundTint="#2C3163"
            android:fontFamily="@font/comfortaabold"
            android:text="LOG OUT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>