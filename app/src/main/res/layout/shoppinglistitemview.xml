<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shadow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EFF3F2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shoppingListItemViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/comfortaabold"

                android:text="name"

                android:textAlignment="center"

                android:textColor="#263238"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shoppingListExpandableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Description:"

                    android:layout_marginLeft="40dp"
                    android:textAlignment="center"

                    android:fontFamily="@font/comfortaaregular"

                    android:textColor="#263238"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />


                <TextView
                    android:id="@+id/shoppingListItemViewDescription"
                    android:layout_width="240dp"
                    android:layout_height="50dp"

                    android:textAlignment="center"
                    android:text="description"

                    android:fontFamily="@font/comfortaaregular"

                    android:textColor="#263238"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Amount:"

                    android:layout_marginLeft="40dp"
                    android:textAlignment="center"

                    android:fontFamily="@font/comfortaaregular"

                    android:textColor="#263238"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />


                <TextView
                    android:id="@+id/shoppingListItemViewAmount"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"

                    android:textAlignment="center"
                    android:text="amount"

                    android:fontFamily="@font/comfortaaregular"

                    android:textColor="#263238"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Unit:"

                    android:layout_marginLeft="40dp"
                    android:textAlignment="center"

                    android:fontFamily="@font/comfortaaregular"

                    android:textColor="#263238"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />


                <TextView
                    android:id="@+id/shoppingListItemViewUnit"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"

                    android:textAlignment="center"
                    android:text="unit"

                    android:fontFamily="@font/comfortaaregular"

                    android:textColor="#263238"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Category:"

                    android:layout_marginLeft="40dp"
                    android:textAlignment="center"

                    android:fontFamily="@font/comfortaaregular"

                    android:textColor="#263238"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />


                <TextView
                    android:id="@+id/shoppingListItemViewCategory"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"

                    android:textAlignment="center"
                    android:text="category"

                    android:fontFamily="@font/comfortaaregular"

                    android:textColor="#263238"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/shoppingListItemViewDelete"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="60dp"
                    android:fontFamily="@font/comfortaaregular"
                    android:textSize="10sp"
                    android:text="DELETE" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>




</androidx.cardview.widget.CardView>